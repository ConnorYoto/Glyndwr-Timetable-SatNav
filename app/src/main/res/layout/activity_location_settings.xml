<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.indooratlas.android.sdk.examples.locationsettings.LocationSettingsActivity">

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/textLocationSettings"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_check_wifi_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_info"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:onClick="onCheckWiFiBackgroundScanning"
        android:text="@string/buttonCheckWiFiSetting"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_check_bt_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_check_wifi_setting"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:onClick="onCheckBluetoothStatus"
        android:text="@string/buttonCheckBTSetting"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_check_location_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_check_bt_setting"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:onClick="onCheckLocationMode"
        android:text="@string/buttonCheckLocationMode"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>
